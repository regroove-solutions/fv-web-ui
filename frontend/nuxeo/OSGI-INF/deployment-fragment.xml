<?xml version="1.0"?>
<fragment version="1">

  <install>
    <!-- Unzip the contents of our web application into the server -->
    <unzip from="${bundle.fileName}" to="/">
      <include>nuxeo.war/**</include>
    </unzip>
  </install>

  <extension target="web#STD-AUTH-FILTER">
    <filter-mapping>
      <filter-name>NuxeoAuthenticationFilter</filter-name>
      <url-pattern>/app/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
  </extension>
  
  <extension target="rewrite#RULE">
    RewriteCond %{REQUEST_URI} !.*/assets/(.*)
    RewriteCond %{REQUEST_URI} !.*/logout/(.*)
    RewriteCond %{REQUEST_URI} !.*/register/(.*)
    RewriteCond %{REQUEST_URI} !.*/forgotpassword/(.*)
    RewriteRule ^/app/(.*) /app/ [L]
  </extension>
  
   <extension target="rewrite#RULE">
    RewriteRule .*/assets/(.*) /app/assets/$1 [L]
    RewriteRule .*/register/ /app/register/ [L]
    RewriteRule .*/forgotpassword/ /app/forgotpassword/ [L]
  </extension>

</fragment>
